<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chatApp</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>ALL CHATS</h1>
    <div id="join-us">
        <a href="/chats/new"><button>Send a new message</button></a>
    </div>
    <div id="chats">
        <% for(let chat of chats) { %>
            <div class="chat">
                <div class="from-to">
                    <div class="img"></div>
                    <span>
                        <%=chat.from%> ‚áæ&nbsp;
                    </span>
                    <div class="img"></div>
                    <span>
                        <%=chat.to%>
                    </span>
                </div>
                <div class="msg">
                    <i><%=chat.msg%></i>
                    <div class="date-time">
                        <span><%=chat.updated_at ? chat.updated_at.toString().split(" ").splice(1, 3).join(" ") : chat.created_at.toString().split(" ").splice(1, 3).join(" ")%></span>
                        <span><%=chat.updated_at ? "(updated) " + chat.updated_at.toString().split(" ")[0] : chat.created_at.toString().split(" ")[0]%> <%=chat.updated_at ? chat.updated_at.toString().split(" ")[4] : chat.created_at.toString().split(" ")[4]%></span>
                    </div>
                </div>
                <div class="chat-options">
                    <form id="delete-form" method="POST" action="/chats/<%=chat.id%>/?_method=DELETE">
                        <button class="delete">Delete chatüóëÔ∏è</button>
                    </form>
                    <a href="/chats/<%=chat.id%>"><button>Edit chatüìù</button></a>
                </div>
            </div>
            <% } %>
    </div>
    <div id="resource-attribution">
        <a href="https://www.pexels.com/photo/red-leaf-trees-near-the-road-33109/">Background image by Pixabay</a>
        <a href="https://www.flaticon.com/ru/free-icons/-" title="avatar icons">Avatar icons by Fantasyou - Flaticon</a>
    </div>
</body>

</html>